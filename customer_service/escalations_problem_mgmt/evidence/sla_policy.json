{
  "policy_name": "Service Level Agreement Policy",
  "version": "2.0",
  "resolution_targets": {
    "CRITICAL": 4,
    "HIGH": 24,
    "MEDIUM": 72,
    "LOW": 120
  },
  "response_targets": {
    "CRITICAL": 0.5,
    "HIGH": 2,
    "MEDIUM": 8,
    "LOW": 24
  },
  "tier_multipliers": {
    "PLATINUM": 0.5,
    "GOLD": 0.75,
    "SILVER": 1.0,
    "BRONZE": 1.5
  },
  "breach_penalties": {
    "customer_credit_percentage": 10,
    "internal_review_required": true,
    "management_notification": true
  },
  "exclusions": [
    "Customer-caused delays",
    "Scheduled maintenance windows",
    "Force majeure events"
  ]
}
